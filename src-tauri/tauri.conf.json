{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Capynotes",
  "version": "0.1.3",
  "identifier": "stn9000",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Capynotes",
        "width": 1200,
        "height": 650,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false,
        "contentProtected": true,
        "zoomHotkeysEnabled": true,
        "minWidth": 350,
        "minHeight": 480,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
